<Window x:Name="Pixel_Editor" x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor"
        mc:Ignorable="d"
        Title="Pixel World Editor" Height="900" Width="1440" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            
            <MenuItem Header="_File" Height="auto">
                <MenuItem Header="_New World"/>
                <MenuItem Header="_Open World"/>
                <MenuItem Header="_Save World"/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
        </Menu>
        <TabControl x:Name="tabControl" HorizontalContentAlignment="Center" DockPanel.Dock="Bottom" VerticalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Padding="0">
            <TabItem Header="World Editor">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Sheets">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
